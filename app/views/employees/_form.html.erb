<%= form_tag url_for(controller: :employees, action: @employee.present? ? :update : :create, id: @employee.try(:dig, "id")), method: @employee.present? ? :put : :post do %>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <%= text_field_tag :name, @employee.try(:dig, "name"), class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label for="position" class="form-label">Position</label>
    <%= text_field_tag :position, @employee.try(:dig, "position"), class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label for="salary" class="form-label">Salary</label>
    <%= number_field_tag :salary, @employee.try(:dig, "salary"), class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label for="date_of_birth" class="form-label">Date of Birth</label>
    <%= date_field_tag :date_of_birth, @employee.try(:dig, "date_of_birth"), class: 'form-control' %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-primary' %>
<% end %>
